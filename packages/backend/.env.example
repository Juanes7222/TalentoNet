# Variables de entorno - Backend TalentoNet
# Copiar a .env y ajustar valores

# App
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=talentonet
DB_USERNAME=talentonet
DB_PASSWORD=talentonet123
DB_NAME=talentonet_db
DB_DATABASE=talentonet_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT
JWT_SECRET=super-secret-change-in-production-use-minimum-32-chars
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=super-refresh-secret-change-in-production
JWT_REFRESH_EXPIRATION=7d

# AWS S3 / MinIO (desarrollo local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=talentonet-documents
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE_NOTIFICATIONS=notifications
RABBITMQ_QUEUE_EXPORTS=exports
RABBITMQ_QUEUE_INTEGRATIONS=integrations

# YÃ©minus Integration (stub)
YEMINUS_API_URL=https://api.yeminus.com/v1
YEMINUS_API_KEY=stub_api_key_replace_with_real
YEMINUS_TIMEOUT=30000
YEMINUS_MAX_RETRIES=3

# PILA
PILA_OPERATOR_CODE=001
PILA_COMPANY_NIT=900123456

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:5173
